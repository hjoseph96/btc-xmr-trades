<div class="container after-nav login-page">

  <div class="columns gapless">
    <div class="login-form column col-6 col-mx-auto">
      <h1>Log In</h1>

      <%= form_tag(sessions_path) do %>
        <div class="form-group">
          <%= label_tag 'login[username]', 'Username', class: 'form-label' %>
          <%= text_field_tag 'login[username]', nil, class: 'form-input' %>
        </div>

        <div class="form-group">
          <%= label_tag 'login[password]', 'Password', class: 'form-label' %>
          <%= password_field_tag 'login[password]', nil, class: 'form-input' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Submit', class: 'btn btn-large' %>
        </div>
      <% end %>

    </div>

  </div>

</div>
